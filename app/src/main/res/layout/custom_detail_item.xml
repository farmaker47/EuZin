<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_grid_selector"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/detailImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailTextTitle"
        android:layout_marginStart="24dp"
        android:padding="7dp"
        app:layout_constraintLeft_toRightOf="@+id/detailImage"
        android:layout_marginLeft="24dp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/detailTextPerigrafi"
        android:padding="7dp"
        app:layout_constraintLeft_toRightOf="@+id/detailImage"
        app:layout_constraintTop_toBottomOf="@+id/detailTextTitle"
        android:layout_marginStart="24dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="24dp" />
</android.support.constraint.ConstraintLayout>