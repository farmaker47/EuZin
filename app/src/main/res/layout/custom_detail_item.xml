<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_grid_selector"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/imageViewDetailSize"
        android:layout_height="@dimen/imageViewDetailSize"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/detailImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_standard"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_standard"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/margin_standard" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailTextTitle"
        android:layout_marginStart="@dimen/margin_24"
        android:padding="@dimen/margin_7"
        app:layout_constraintLeft_toRightOf="@+id/detailImage"
        android:layout_marginLeft="@dimen/margin_24"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_48"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="@dimen/imageViewDetailSize"
        android:layout_height="wrap_content"
        android:id="@+id/detailTextPerigrafi"
        android:padding="@dimen/margin_7"
        app:layout_constraintLeft_toRightOf="@+id/detailImage"
        app:layout_constraintTop_toBottomOf="@+id/detailTextTitle"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_7"
        android:layout_marginLeft="@dimen/margin_24" />
</android.support.constraint.ConstraintLayout>