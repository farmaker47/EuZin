<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_grid_selector"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageCategories"
        android:layout_width="@dimen/imageViewCategoriesSize"
        android:layout_height="@dimen/imageViewCategoriesSize"
        android:layout_marginEnd="@dimen/margin_6"
        android:layout_marginLeft="@dimen/margin_6"
        android:layout_marginRight="@dimen/margin_6"
        android:layout_marginStart="@dimen/margin_6"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_marginBottom="@dimen/margin_6"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/categoriesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_TextView_Title"
        android:textColor="@color/primary"
        android:paddingLeft="@dimen/margin_4"
        android:paddingRight="@dimen/margin_4"
        app:layout_constraintBottom_toBottomOf="@+id/imageCategories"
        app:layout_constraintLeft_toLeftOf="@+id/imageCategories"
        app:layout_constraintRight_toRightOf="@+id/imageCategories"
        app:layout_constraintTop_toTopOf="@+id/imageCategories"
        app:layout_constraintVertical_bias="1.0"
        android:background="@color/icons"/>


</android.support.constraint.ConstraintLayout>